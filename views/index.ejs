<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Blog</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>üìù My Blog</h1>
    <a href="/new" class="create-btn">+ Create New Post</a>

    <% if (posts.length === 0) { %>
      <p class="empty">No posts yet. Create your first one!</p>
    <% } else { %>
      <% posts.forEach(post => { %>
        <div class="post-card">
          <h2><%= post.title %></h2>
          <p class="meta">By <strong><%= post.author %></strong> | <%= post.category %></p>
          <p class="content"><%= post.content %></p>

          <div class="actions">
            <a href="/edit/<%= post.id %>" class="edit">Edit</a>
            <form action="/delete/<%= post.id %>" method="POST">
              <button class="delete">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>
</body>
</html>
